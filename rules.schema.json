{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Email Rules Schema",
  "type": "object",
  "required": ["predicate", "rules", "actions"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "predicate": {
      "type": "string",
      "enum": ["all", "any"]
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["field", "predicate", "value"],
        "properties": {
          "field": {
            "type": "string",
            "enum": ["from", "to", "subject", "date_received"]
          },
          "predicate": {
            "type": "string",
            "enum": ["contains", "not_equals", "less_than"]
          },
          "value": {
            "type": ["string", "number"]
          }
        },
        "additionalProperties": false
      }
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["mark_as_read", "mark_as_unread", "move_to"]
          },
          "value": {
            "type": "string"
          }
        },
        "if": {
          "properties": {
            "type": { "const": "move_to" }
          }
        },
        "then": {
          "required": ["value"]
        },
        "additionalProperties": false
      }
    }
  }
}
